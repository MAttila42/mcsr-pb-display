{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "moduleDetection": "force",
    "useDefineForClassFields": true,
    "module": "esnext",
    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
      "@api": ["../api/src"],
      "@api/*": ["../api/src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte", "uno.config.ts", "src/content.tst.tssrc/content.tsntent.ts", "src/content.ts", "src/content.ts"]
}
